<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="webcode" translate="label" sortOrder="500">
            <label>Webcode Extensions</label>
        </tab>
        <section id="webcode_glami" translate="label" sortOrder="520" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>webcode</tab>
            <class>separator-top</class>
            <label>Glami</label>
            <resource>Webcode_Glami::glami_config</resource>

            <group id="general" translate="label" type="text" sortOrder="30" showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Glami Pixel</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable Glami Pixel</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="pixel_id" translate="label tooltip" type="text" sortOrder="15" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Glami API Key</label>
                    <depends>
                        <field id="pixel_enabled">1</field>
                    </depends>
                    <validate>required-entry</validate>
                </field>

                <field id="locale" translate="label tooltip" type="select" sortOrder="15" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Locale</label>
                    <depends>
                        <field id="pixel_enabled">1</field>
                    </depends>
                    <source_model>Webcode\Glami\Model\Config\Source\Locale</source_model>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
